<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
        <!--<item name="android:actionBarTabBarStyle">@style/Widget.AppTheme.ActionBar.TabBar</item>-->
        <!--<item name="actionBarTabBarStyle">@style/Widget.AppTheme.ActionBar.TabBar</item>-->
    </style>

    <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome|useLogo</item>
    </style>
    
    <!--<style name="Widget.AppTheme.ActionBar.TabBar" parent="Widget.AppCompat.ActionBar.TabBar">-->
    <!--</style>-->

    <style name="ViewWithPadding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
    </style>
    
    <style name="LoginText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFCDCDCD</item>
        <item name="android:background">@drawable/login_edit_text_default</item>
    </style>

    <style name="LoginButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
